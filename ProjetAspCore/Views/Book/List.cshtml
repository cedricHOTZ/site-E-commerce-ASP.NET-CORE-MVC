@model ProjetAspCore.ViewsModels.BookListViewModel

<html>

<head>
    
</head>

<body>
    @foreach (var book in Model.Books)
    {
    <div class="mt-5 col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <h1>
                <a asp-controller="Book" asp-action="Detail" asp-route-idBook="@book.BookId"> @book.Name</a>
            </h1>
            <img src="@book.ImageUrl" alt="" widht="150" width="400" />
            <div class="caption">
                <p>@book.ShortDescription</p>
                <h3 class="pull-right">@book.Price.ToString("c")</h3>
            </div>
            </div>
        </div>
    }

</body>
</html>
